<div id="Received_Analyzes_Loading" style="display:none;"><i class="fa fa-spinner"></i></div>
@using (Html.BeginForm("", "", FormMethod.Post, new { @id = "Receive_Lab_Analyzes_Form" }))
{
    <div class="row input-group">

        <div class="col-md-4">
            <input type="text" id="Received_Analyzes_searchtext" class="form-control form-widthhh" placeholder="Search ...">
            <span class="input-group-addon namefirst" style="width: 40px;">
                <a href="" id="Received_Analyzes_Search_Link"><i class="fa fa-search"></i></a>
            </span>
        </div>

        <div class="col-md-5"></div>

        <div class="col-md-3">

            <div id="Received_Analyzes_Report_Range" class="pull-right" style="background: #fff; cursor: pointer; padding: 8px 10px; border: 1px solid #ccc; width: 100%">
                <i class="glyphicon glyphicon-calendar fa fa-calendar"></i>&nbsp;
                <span id="Received_Analyzes_DateRangeText"></span> <b class="caret"></b>
            </div>

        </div>

    </div>

    <div class="input-group table-responsive" id="Received_Lab_Analyzes_Container">
        @{Html.RenderAction("LoadReceivedAnalyzes");}
    </div>
}
<script type="text/javascript">
    ////////////////////////////////////////////////////////////
    $(document).ajaxStart(function () {
        try {
            $("#Receive_Lab_Analyzes_Form").prop('disabled', true);
            //   $("#Chemist_Transactions_Form").hide();
            $("#Received_Analyzes_Loading").show();
        }
        catch (err) {
            alert(err.message);
        }
    });
    /////////////////////////////////////////////////////////
    $(document).ajaxStop(function () {
        try {
            $("#Receive_Lab_Analyzes_Form").prop('disabled', true);
            //   $("#Chemist_Transactions_Form").show();
            $("#Received_Analyzes_Loading").hide();
        }
        catch (err) {
            alert(err.message);
        }
    });
    /////////////////////////////////
    $(function () {

        function cb(start, end) {
            $('#Received_Analyzes_Report_Range span').html(start.format('MMMM D, YYYY') + ' - ' + end.format('MMMM D, YYYY'));
        }
        cb(moment(), moment());

        $('#Received_Analyzes_Report_Range').daterangepicker({
            ranges: {
                'Today': [moment(), moment()],
                'Yesterday': [moment().subtract(1, 'days'), moment().subtract(1, 'days')],
                'Last 7 Days': [moment().subtract(6, 'days'), moment()],
                'Last 30 Days': [moment().subtract(29, 'days'), moment()],
                'This Month': [moment().startOf('month'), moment().endOf('month')],
                'Last Month': [moment().subtract(1, 'month').startOf('month'), moment().subtract(1, 'month').endOf('month')]
            }
        }, cb);

    });

    //////////////////////////////////////////////////////////
    $('#Received_Analyzes_Search_Link').on('click', function (event) {
        event.preventDefault();
     //   LoadReceivedAnalyzes();
    });
    //////////////////////////////////////////////////////////////////////
    $('#Received_Analyzes_Report_Range').on('apply.daterangepicker', function (ev, picker) {
     //   LoadReceivedAnalyzes();
    });
    ////////////////////////////////////////////////////////////////////////////////////
    function LoadReceivedAnalyzes() {
        try {
            var SearchValue = $("#Received_Analyzes_searchtext").val();
            var DateRangeValue = $("#Received_Analyzes_DateRangeText").html();
            $.ajax({
                cache: false,
                async: true,
                type: "GET",
                url: "/Lab/LoadReceivedAnalyzes?SearchPattern=" + SearchValue + "&DateRange=" + DateRangeValue,//form.attr('action'),
                success: function (data) {
                    $("#Received_Lab_Analyzes_Container").html(data);
                },
                error: function (xhr, desc, err) {
                    alert("Error: " + err + " " + desc + " " + xhr.responseText);
                }
            });
        }
        catch (err) {
            alert(err.message + err.description);
        }
    }
    //////////////////////////////////////////////////////////
    $('#Received_Analyzes_searchtext').keyup(function () {
        var SearchPattern = $(this).val();
        try {
            if (SearchPattern != null && SearchPattern.length > 0) {
                SearchPattern = SearchPattern.toLocaleLowerCase();
            }
            $.each($('#Received_Analyzes_Table tbody tr'), function (i, val) {
                console.log(($(val).text()));
                if ($(val).text().toLocaleLowerCase().indexOf(SearchPattern) == -1) {
                    $(val).hide();
                } else {
                    $(val).show();
                }
            });
        }
        catch (err) {
            alert(err.message);
        }
    });
    ///////////////////////////////////////////////////////////////////////////////////
    function ReceivedAnalyzes(RequestedAnalysisId, DeviceId) {
        try {
            $.ajax({
                cache: false,
                async: true,
                type: "POST",
                url: "/Lab/ReceivedAnalysis",//form.attr('action'),
                data: "RequestedAnalysisId=" + RequestedAnalysisId + "&DeviceId=" + DeviceId,
                success: function (data) {
                    $("#Received_Lab_Analyzes_Container").html(data);
                },
                error: function (xhr, desc, err) {
                    alert("Error: " + err.message + " " + desc + " " + xhr.responseText + err.description);
                }
            });
        }
        catch (err) {
            alert(err.message + err.description);
        }
    }
</script>