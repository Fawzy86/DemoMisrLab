@model DemoMisrInternationalLab.Models.PatientRequestAnalysisViewModel
@using (Html.BeginForm("", "", FormMethod.Post, new { @id = "Saved_Samples_Form" }))
{
    @Html.AntiForgeryToken()
    if (Model.PatientRequestAnalyzes != null)
    {
        for (int i = 0; i < Model.PatientRequestAnalyzes.Count; i++)
        {
            var CheckBoxClass="ck-button";
            if (i % 2 == 0) 
            {
                CheckBoxClass = "ck-buttonb";
            }
            @Html.HiddenFor(x => Model.PatientRequestAnalyzes[i].PatientRequestAnalysis.RequestedAnalysisID)
            <div class="@CheckBoxClass">
                <label>
                    <input type="checkbox" name="SelectedRequestAnalyzesIDs"
                           id="@Model.PatientRequestAnalyzes[i].PatientRequestAnalysis.RequestedAnalysisID"
                           value="@Model.PatientRequestAnalyzes[i].PatientRequestAnalysis.RequestedAnalysisID"
                           @{if (Model.SelectedRequestAnalyzesIDs.Contains(@Model.PatientRequestAnalyzes[i].PatientRequestAnalysis.RequestedAnalysisID))
                             { <text> checked='checked' </text>                       } } />

                    <span>

                        <table width="100%">

                            <tr>
                                <td width="8%">@Html.DisplayTextFor(m => Model.PatientRequestAnalyzes[i].PatientRequestAnalysis.RequestNumber)</td>
                                <td width="82%">@Html.DisplayFor(x => Model.PatientRequestAnalyzes[i].PatientRequestAnalysis.AnalysisName)</td>
                                <td width="10%"></td>
                            </tr>

                        </table>
                    </span>
                </label>
            </div>
        }
    }
}
