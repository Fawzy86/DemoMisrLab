@model DemoMisrInternationalLab.Models.LoginViewModel


@using (Html.BeginForm())
{
    <div class="login-holder col-md-6 col-md-offset-3">
        <h2 class="page-header text-center text-primary">
            <img src="~/images/logo-login.png" alt=""> <br>
            Welcome to Misr International Lab
        </h2>
        @Html.AntiForgeryToken()
        <hr />
        @*@Html.ValidationSummary()*@
        <div class="text-danger">
           <p> @ViewBag.ErrorMessage    </p>
        </div>
        <div class="form-group">
            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @placeholder = "Email" })
        </div>
        <div>
           <p> @Html.ValidationMessageFor(m => m.UserName, "", new { @style = "color:red;" })</p>
        </div>
        <div class="form-group">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Password" })
        </div>
        <div>
            <p>@Html.ValidationMessageFor(m => m.Password, "", new { @style = "color:red;" })</p>
        </div>
        <div class="form-footer">
            <br>
            <button type="submit" class="btn btn-info pull-right btn-submit">Login</button>
        </div>
    </div>
}
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/jqueryval")


